# ===========================================
# PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env for production deployment
# These settings are optimized for production use

NODE_ENV=production
PORT=3000

# SMTP Settings (production optimized)
SMTP_TIMEOUT=10000
SMTP_MAX_RETRIES=3
FORCE_SMTP_VALIDATION=false

# Rate Limiting (strict for production)
API_RATE_LIMIT=100
RATE_LIMIT_WINDOW=900000

# Logging (minimal for production)
ENABLE_LOGGING=true
LOG_LEVEL=warn
LOG_SMTP_RESPONSES=false

# Security (strict for production)
DEV_CORS_ALL_ORIGINS=false
DEV_DETAILED_ERRORS=false

# Validation (all checks enabled)
SKIP_DISPOSABLE_CHECK=false
SKIP_ROLE_CHECK=false

# Optional: Add your production-specific settings
# REDIS_URL=redis://your-redis-server:6379
# API_SECRET_KEY=your-production-secret-key
# WEBHOOK_URL=https://your-production-webhook.com/validation
