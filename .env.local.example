# ===========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ===========================================
# Copy this file to .env.local for local development
# This file contains safe defaults for local testing

NODE_ENV=development
PORT=3000

# SMTP Settings (more permissive for local testing)
SMTP_TIMEOUT=5000
SMTP_MAX_RETRIES=2
FORCE_SMTP_VALIDATION=false

# Rate Limiting (more permissive for development)
API_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=60000

# Logging (verbose for development)
ENABLE_LOGGING=true
LOG_LEVEL=debug
LOG_SMTP_RESPONSES=true

# Development Settings
DEV_CORS_ALL_ORIGINS=true
DEV_DETAILED_ERRORS=true

# Skip some validations for faster testing
SKIP_DISPOSABLE_CHECK=false
SKIP_ROLE_CHECK=false
